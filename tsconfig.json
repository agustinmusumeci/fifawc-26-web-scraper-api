{
  "compilerOptions": {
    "allowJs": true,
    "noImplicitAny": true,

    "target": "es2024",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "isolatedModules": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src"]
}
